@model WorkoutModel
@{
    ViewData["Title"] = "Workout";
}

<h2>Workout</h2><hr />
@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">
        <strong>Success!</strong> @TempData["SuccessMessage"]
    </div>
}
else if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @TempData["ErrorMessage"]
    </div>
}
<form method="post">
    <div class="form-group">
        <label asp-for="Type">Workout type:</label>
        <select class="form-control" asp-for="Type">
            <option value="Chest">Chest</option>
            <option value="Legs">Legs</option>
            <option value="Back">Back</option>
            <option value="Shoulders">Shoulders</option>
            <option value="Arms">Arms</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CaloriesBurned">Calories burned</label>
        <input type="number" class="form-control" asp-for="CaloriesBurned">
    </div>
    <div class="form-group">
        <label asp-for="DurationMinutes">Duration</label>
        <input type="number" class="form-control" asp-for="DurationMinutes">
    </div>
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input type="date" class="form-control" asp-for="Date">
    </div>
    <input type="submit" class="btn btn-primary" value="Submit workout" />
</form>

